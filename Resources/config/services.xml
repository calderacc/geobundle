<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="caldera.geobundle.reader.gpx" class="Caldera\GeoBundle\GpxReader\GpxReader">
        </service>

        <service id="caldera.geobundle.reader.track" class="Caldera\GeoBundle\GpxReader\TrackReader">
            <argument type="service" id="doctrine" />
            <argument type="service" id="caldera.geobundle.distance_calculator.track" />
        </service>

        <service id="caldera.geobundle.distance_calculator.simple" class="Caldera\GeoBundle\DistanceCalculator\SimpleDistanceCalculator">
        </service>

        <service id="caldera.geobundle.distance_calculator.track" class="Caldera\GeoBundle\DistanceCalculator\TrackDistanceCalculator">
            <argument type="service" id="doctrine" />
            <argument type="service" id="vich_uploader.templating.helper.uploader_helper" />
        </service>
    </services>
</container>
